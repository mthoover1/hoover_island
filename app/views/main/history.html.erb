<% even_odd = "odd" %>
<% @years.each do |year| %>
  <% if even_odd == "odd" %>
    <div class="year odd">
    <% even_odd = "even" %>
  <% else %>
    <div class="year even">
    <% even_odd = "odd" %>
  <% end %>
    <div class="content">
      <div class="year-title"><%= year %></div>
      <% @trips.select{|trip| trip.year == year}.each do |trip| %>
        <div class="trip ">
        <% trip.people.order(:seniority, :first_name).each do |person| %>
          <div class="person">
            <%= person.full_name %>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="content">
  <ol>
  <% @leaderboard.each do |person| %>
    <li><%= person.full_name %> <%= person.trip_count %></li>
  <% end %>
  </ol>
</div>

