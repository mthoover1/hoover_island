<div class="content page-container green-background">
  <div class="page-title">Request a Reservation</div>


  <% if flash[:alert] %>
    <div class="request-alert"><%= flash[:alert] %></div>
  <% end %>

  <div id="datepicker"></div>

  <div class="reservation-for">Reservation for <%= current_user.full_name %></div>

  <%= form_for @reservation_request do |f| %>
    <%= f.hidden_field :person_id, value: current_user.id %>

    <div class="field thirds">
      <%= f.text_field :start_date, placeholder: 'Start Date', id: 'input1', readonly: true,  class: 'request-third left-third request-date' %>
      <%= f.text_field :end_date, placeholder: 'End Date', id: 'input2', readonly: true,  class: 'request-third middle-third request-date' %>
      <%= f.text_field :visitor_count, placeholder: 'Visitor Count (Opt.)', class: 'request-third right-third' %>
    </div>

    <div class="field">
      <%= f.text_field :note, placeholder: 'Note (Optional)' %>
    </div>

    <div class="field">
      <%= f.submit 'Submit', class: 'button button-blue request-button' %>
    </div>
  <% end %>
</div>
